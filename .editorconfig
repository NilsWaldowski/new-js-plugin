#
# .editorconfig
#
# http://editorconfig.org
#
# The EditorConfig project consists of a file format for defining coding styles
# and a collection of text editor plugins that enable editors to read the file
# format and adhere to defined styles.
#

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# .css specific rules
[*.css]
indent_style = space
indent_size = 4

# .scss specific rules
[*.scss]
indent_style = space
indent_size = 4

# .js specific rules
[*.js]
indent_style = space
indent_size = 4

# .json specific rules
[*.json]
indent_style = space
indent_size = 4

# .html specific rules
[*.html]
indent_style = space
indent_size = 4

# .mustache specific rules
[*.mustache]
indent_style = space
indent_size = 4
